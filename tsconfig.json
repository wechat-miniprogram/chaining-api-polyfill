        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "module": "CommonJS",
        "target": "es5",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": ["ES6", "ES7", "DOM", "ESNext"]
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}
